.iconed-link {
  font-weight: bold;
  font-size: 18px;
  line-height: 25px;
  color: #586ED3;
  text-decoration: none;
  display: inline-flex;
  align-items: center;

  &::before {
    background: svg-load('link.svg', fill=#586ED3, width=100%, height=100%);
    content: "";
    display: block;
    width: 16px;
    height: 16px;
    margin-right: 16px;
  }
}